source ~/.mutt/local.muttrc
source ~/.mutt/colors.muttrc
source /usr/local/share/examples/mutt/gpg.rc

# System
unset suspend

# Edit
set edit_hdrs
set signature="~/.mutt/signature"
set fast_reply
set include
set reverse_name
set editor="vim -c 'set spell' -c 'normal Go' -c ':startinsert'"

# View
set sort=threads
set sort_aux=date-sent
set beep=no
set beep_new=yes
set forward_quote
set indent_str="> "
set tilde
ignore *
unignore From: Subject: Date: To: CC: Bcc: User-Agent: X-Mailer: X-Bogosity:
unhdr_order *
hdr_order From: Subject: Date: To: CC: Bcc: User-Agent: X-Mailer: X-Bogosity:
macro pager \cw |urlview<return>

# Cache
set message_cachedir="~/.cache/mutt"
set header_cache="~/.cache/mutt"

# sidebar
set sidebar_width=25
set sidebar_visible=yes
set sidebar_delim='|'
#set sidebar_sort=yes
#set sidebar_format='%B%N%S'
#set sidebar_folderindent=yes
bind index \e[A sidebar-prev
bind index \e[B sidebar-next
bind index \e[C sidebar-open
bind pager \e[A sidebar-prev
bind pager \e[B sidebar-next
bind pager \e[C sidebar-open
bind index "\\" next-unread-mailbox
bind pager "\\" next-unread-mailbox
macro index,pager \c? <change-folder>=INBOX<return>

# Spam
macro pager X <save-message>=INBOX.Spam.LearnSpam<return>
macro pager H <save-message>=INBOX.Spam.LearnHam<return>

# IMAP
#set imap_idle
set imap_keepalive=300
set mail_check=5
#set imap_check_subscribed
set record="=Sent"
set postponed="=Drafts"
set trash="=Trash"
set timeout=10
set net_inc=5
set copy
unset mark_old

# addressbook
#set query_command="lbdbq %s"
set query_command="abook --mutt-query '%s'"
macro index \ca !abook\n
macro pager A |'abook --add-email'\n

# PGP
set pgp_replyencrypt
set pgp_replysign
set pgp_replysignencrypted
set pgp_show_unusable=no
set pgp_verify_sig
set pgp_use_gpg_agent
set pgp_timeout=3600
set pgp_autosign
